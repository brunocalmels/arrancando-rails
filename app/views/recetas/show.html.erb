<% provide(:title, "Receta") %>

<p>
  <strong>Título:</strong>
  <%= @receta.titulo %>
</p>

<p>
  <strong>Cuerpo:</strong>
  <%= @receta.cuerpo %>
</p>

<p>
  <strong>Autor:</strong>
  <%= link_to @receta.user.username, @receta.user %>
</p>

<p>
  <strong>Categoría:</strong>
  <%= @receta.categoria_receta.nombre %>
</p>

<p>
  <strong>Puntaje:</strong>
  <%= @receta.puntajes %>
</p>

<p>
  <strong>Categoria receta:</strong>
  <%= @receta.categoria_receta.nombre %>
</p>

<p>
  <strong>Multimedia:</strong>
  <% @receta.imagenes.any? && @receta.imagenes.each_with_index do |img, i| %>
    <% case img.blob.content_type %>
    <% when 'video/mp4', 'video/mpg', 'video/mpeg' %>
      <video controls>
        <source src=<%= rails_blob_path(img) %> />
      </video>
    <% when 'image/jpg', 'image/jpeg', 'image/png' %>
      <%= image_tag(img.variant(resize_to_limit: [200,200])) %>
    <% end %>
  <% end %>
</p>

<%=  link_to 'Editar', edit_receta_path(@receta) %> |
<%= link_to 'Volver', recetas_path %>