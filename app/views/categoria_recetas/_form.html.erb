<%= form_with(model: categoria_receta, local: true) do |form| %>
  <% if categoria_receta.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(categoria_receta.errors.count, "error") %> impidió que este Caterogía de Recetas se guardara:</h2>

      <ul>
        <% categoria_receta.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :nombre %>
    <%= form.text_field :nombre %>
  </div>

  <div class="actions">
    <%= form.submit :Guardar, class: "btn btn-success" %>
  </div>
<% end %>
