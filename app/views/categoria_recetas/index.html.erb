<% provide(:title, "Categorías Recetas") %>


<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>ID</th>
        <th>Nombre</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @categoria_recetas.each do |categoria_receta| %>
        <tr>
          <td><%= categoria_receta.id %></td>
          <td><%= categoria_receta.nombre %></td>
          <td>
            <%= link_to edit_categoria_receta_url(categoria_receta), class: "btn btn-xs btn-info" do %>
              <i class="fa fa-pencil-alt"></i>
            <% end %>
          </td>
          <td>
            <%= button_to categoria_receta, class: "btn btn-xs btn-danger", method: :delete, data: { confirm: "¿Seguro de que desea eliminar esta categoría de recetas?" } do %>
              <i class="fa fa-trash"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<div class="botonera">
  <%= link_to 'Nueva Categoría Receta', new_categoria_receta_path, class: "btn btn-success" %>
</div>
