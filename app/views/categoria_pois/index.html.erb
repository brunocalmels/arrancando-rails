<% provide(:title, "Categorías Pois") %>

<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>ID</th>
        <th>Nombre</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @categoria_pois.each do |categoria_poi| %>
        <tr>
          <td><%= categoria_poi.id %></td>
          <td><%= categoria_poi.nombre %></td>
          <!--<td><%= link_to 'Ver', categoria_poi %></td>-->
          <td><%= link_to 'Editar', edit_categoria_poi_path(categoria_poi) %></td>
          <td><%= link_to 'Eliminar', categoria_poi, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<div class="botonera">
  <%= link_to 'Nueva Categoría Poi', new_categoria_poi_path, class: "btn btn-success" %>
</div>
