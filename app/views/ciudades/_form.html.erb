<%= form_with(model: ciudad, local: true) do |form| %>
  <% if ciudad.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(ciudad.errors.count, "error") %> impidiÃ³ que esta ciudad se guardara:</h2>

      <ul>
        <% ciudad.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :nombre %>
    <%= form.text_field :nombre %>
  </div>

  <div class="field">
    <%= form.label :provincia %>
    <%= form.select :provincia_id, Provincia.order(nombre: :asc).collect { |c| [c.nombre_con_pais, c.id] } %>
  </div>

  <div class="actions">
    <%= form.submit "Guardar", class: 'btn btn-success' %>
  </div>
<% end %>
