<% provide(:title, "Ciudades") %>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ciudades.each do |ciudad| %>
      <tr>
        <td><%= link_to 'Ver', ciudad %></td>
        <td><%=  link_to 'Editar', edit_ciudad_path(ciudad) %></td>
        <td><%= link_to 'Eliminar', ciudad, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Ciudad', new_ciudad_path %>
