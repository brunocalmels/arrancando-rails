<% provide(:title, "Comentarios de Publicaciones") %>


<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Publicación</th>
        <th>Usuario</th>
        <th>Mensaje</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @comentario_publicaciones.each do |comentario_publicacion| %>
        <tr>
          <td><%= link_to comentario_publicacion.publicacion.titulo, comentario_publicacion.publicacion %></td>
          <td><%= comentario_publicacion.user.username %></td>
          <td><%= comentario_publicacion.mensaje %></td>
          <td>
            <%= link_to comentario_publicacion_path(comentario_publicacion), class: "btn btn-xs btn-success" do %>
              <i class="fa fa-eye"></i>
            <% end %>
          </td>
          <td>
            <%= link_to edit_comentario_publicacion_url(comentario_publicacion), class: "btn btn-xs btn-info" do %>
              <i class="fa fa-pencil-alt"></i>
            <% end %>
          </td>
        <td>
          <%= button_to comentario_publicacion, class: "btn btn-xs btn-danger", method: :delete, data: { confirm: "¿Seguro de que desea eliminar este comentario?" } do %>
            <i class="fa fa-trash"></i>
          <% end %>
        </td>        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%# link_to 'Nuevo Comentario', new_comentario_publicacion_path %>
