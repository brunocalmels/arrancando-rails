<% provide(:title, "Usuarios") %>

<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Apellido</th>
        <th>Username</th>
        <th>Email</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.nombre %></td>
          <td><%= user.apellido %></td>
          <td><%= user.username %></td>
          <td><%= user.email %></td>
          <td>
            <%= link_to user_path(user), class: "btn btn-xs btn-success" do %>
              <i class="fa fa-eye"></i>
            <% end %>
          </td>
          <td>
            <%= link_to edit_user_url(user), class: "btn btn-xs btn-info" do %>
              <i class="fa fa-pencil-alt"></i>
            <% end %>
            </td>
          <td>
            <%= button_to user, class: "btn btn-xs btn-danger", method: :delete, data: { confirm: "Â¿Seguro de que desea eliminar este usuario?" } do %>
              <i class="fa fa-trash"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<div class="botonera">
  <%= link_to 'Nuevo Usuario', new_user_path, class: "btn btn-success"%>
</div>
