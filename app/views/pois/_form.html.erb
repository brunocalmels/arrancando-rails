<%= form_with(model: poi, local: true) do |form| %>
  <% if poi.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(poi.errors.count, "error") %> impidi√≥ que este Poi se guardara:</h2>

      <ul>
        <% poi.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :titulo %>
    <%= form.text_field :titulo %>
  </div>

  <div class="field">
    <%= form.label :cuerpo %>
    <%= form.text_area :cuerpo %>
  </div>

  <div class="field">
    <%= form.label :lat %>
    <%= form.text_field :lat %>
  </div>

  <div class="field">
    <%= form.label :long %>
    <%= form.text_field :long %>
  </div>

  <div class="field">
    <%= form.label :categoria_poi_id %>
    <%= form.select :categoria_poi_id, CategoriaPoi.all.collect { |c| [c.nombre, c.id] } %>
  </div>

  <!--
  <div class="field">
    <%= form.label :puntaje %>
    <%= form.text_field :puntaje %>
  </div>
  -->

  <div class="actions">
    <%= form.submit :Guardar %>
  </div>
<% end %>
