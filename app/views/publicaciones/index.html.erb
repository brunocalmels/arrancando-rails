<% provide(:title, "Publicaciones") %>


<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Título</th>
        <th>Cuerpo</th>
        <th>Puntajes</th>
        <th>Ciudad</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @publicaciones.each do |publicacion| %>
        <tr>
          <td><%= publicacion.titulo %></td>
          <td><%= publicacion.cuerpo %></td>
          <td><%= publicacion.puntajes %></td>
          <td><%= publicacion.ciudad_id %></td>
          <td><%= link_to 'Ver', publicacion %></td>
          <td><%=  link_to 'Editar', edit_publicacion_path(publicacion) %></td>
          <td><%= link_to 'Eliminar', publicacion, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= paginate @publicaciones %>

<br>

<div class="botonera">
  <%= link_to 'Nueva Publicación', new_publicacion_path, class: 'btn btn-success' %>
</div>
