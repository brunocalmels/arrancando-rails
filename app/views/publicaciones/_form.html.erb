<%= form_with(model: publicacion, local: true, multipart: true) do |form| %>
  <% if publicacion.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(publicacion.errors.count, "error") %> impidi√≥ que este publicacion se guardara:</h2>

      <ul>
        <% publicacion.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :titulo %>
    <%= form.text_field :titulo %>
  </div>

  <div class="field">
    <%= form.label :cuerpo %>
    <%= form.text_area :cuerpo %>
  </div>

  <!--
  <div class="field">
    <%= form.label :cuerpo_rich %>
    <%= form.rich_text_area :cuerpo_rich %>
  </div>

  <div class="field">
    <%= form.label :puntajes %>
    <%= form.text_field :puntajes %>
  </div>
  -->

  <div class="field">
    <%= form.label :ciudad %>
    <%= form.select :ciudad_id, Ciudad.all.collect { |c| [c.nombre, c.id] } %>
  </div>

  <div class="field">
    <% publicacion.imagenes.any? && publicacion.imagenes.each_with_index do |img, i| %>
    <div class="item_multimedia">
      <% case img.blob.content_type %>
      <% when 'video/mp4' %>
        <video controls>
          <source src=<%= rails_blob_path(img) %> />
        </video>
      <% when 'image/jpg', 'image/jpeg', 'image/png' %>
        <%= image_tag(img.variant(resize_to_limit: [200,200])) %>
      <% end %>
      <div>
        <%= label :Eliminar, "Eliminar", class: "inline"%>
        <%= check_box_tag "remove_imagenes[#{i}]", rails_blob_path(img) %>
      </div>
    </div>
    <% end %>
  </div>

  <div class="field">
    <%= form.label :imagenes %>
    <%= form.file_field :imagenes, multiple: true, class: :input %>
  </div>

  <div class="actions">
    <%= form.submit :Guardar %>
  </div>
<% end %>
