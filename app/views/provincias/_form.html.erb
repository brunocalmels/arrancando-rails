<%= form_with(model: provincia, local: true) do |form| %>
  <% if provincia.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(provincia.errors.count, "error") %> impidió que esta provincia se guardara:</h2>

      <ul>
        <% provincia.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :nombre %>
    <%= form.text_field :nombre %>
  </div>

  <div class="field">
    <%= form.label "País" %>
    <%= form.select :pais_id, Pais.order(nombre: :asc).collect { |c| [c.nombre, c.id] } %>
  </div>

  <div class="actions">
    <%= form.submit "Guardar", class: "btn btn-success"%>
  </div>
<% end %>
